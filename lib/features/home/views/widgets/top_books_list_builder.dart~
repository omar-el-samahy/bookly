import 'package:bookly/features/home/views/widgets/top_books_container.dart';
import 'package:flutter/material.dart';

class TopBooksListBuilder extends StatelessWidget {
  final int itemCount;

  const TopBooksListBuilder({
    Key? key,
    this.itemCount = 3, // Default item count
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Padding(
      padding: const EdgeInsets.symmetric(horizontal: 8.0), // List padding
      child: ListView.separated(
        itemBuilder: (context, index) => const TopBooksContainer(),
        separatorBuilder: (context, index) => const SizedBox(width: 8.0), // Space between items
        itemCount: itemCount,
        scrollDirection: Axis.horizontal,
      ),
    );
  }
}
